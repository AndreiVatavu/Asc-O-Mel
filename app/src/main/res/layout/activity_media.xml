<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MediaActivity"
    android:orientation="vertical"
    android:gravity="center_horizontal" >

    <ImageView
        android:id="@+id/player_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/music_image"
        android:layout_marginTop="60dp" />

    <SeekBar
        android:id="@+id/position_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/elapsed_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="40dp"
            android:text="0:00"/>

        <TextView
            android:id="@+id/total_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="40dp"
            android:text="-:--" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:gravity="center">
        <Button
            android:id="@+id/previous_song_button"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_margin="20dp"
            android:background="@drawable/previous"/>
        <Button
            android:id="@+id/play_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="20dp"
            android:background="@drawable/play"
            android:onClick="startStopMedia"/>
        <Button
            android:id="@+id/next_song_button"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_margin="20dp"
            android:background="@drawable/next"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/no_sound"
            android:layout_width="13dp"
            android:layout_height="26dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="40dp"
            android:background="@drawable/sound" />

        <SeekBar
            android:id="@+id/volume_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/max_sound"
            android:layout_alignStart="@+id/no_sound"
            android:layout_centerInParent="true"
            android:layout_marginEnd="37dp"
            android:layout_marginStart="23dp" />

        <ImageView
            android:id="@+id/max_sound"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="40dp"
            android:background="@drawable/sound2" />
    </RelativeLayout>

</LinearLayout>